    <script>
    $(document).ready(function(){
      var count = 0;
      var output = 0;
      function getCount()
      {
        $.getJSON('ajaxcount.php', function(data){
          count = parseInt(data.totalsigs);
        })
      }

      function setOutput()
      {
        if(output<count)
        {
          output++;
          $('div.counter').html('<h1>'+output+'</h1><p class="lead">Signatures currently</br>Will you sign it?</p>');
        }
      }

      getCount();

      setInterval(function() { getCount() } , 5000);

      setInterval(function() { setOutput() }, 5);
    })

</script>
